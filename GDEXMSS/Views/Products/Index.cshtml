                            <!-- Tab Nav -->
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                @{
                                    var number = 0;
                                }
                                @foreach (var item in Model.listCategories)
                                {
                                    if (number == 0)
                                    {
                                        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#@Html.DisplayFor(modelItem => item.categoryID)" role="tab">@Html.DisplayFor(modelItem => item.name)</a></li>
                                    }
                                    else
                                    {
                                        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#@Html.DisplayFor(modelItem => item.categoryID)" role="tab">@Html.DisplayFor(modelItem => item.name)</a></li>
                                    }
                                    number++;

                                }
                            </ul>
                            <!--/ End Tab Nav -->
