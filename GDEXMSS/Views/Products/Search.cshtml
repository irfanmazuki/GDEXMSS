@model GDEXMSS.Models.CombinedProductIndex
@{
    ViewBag.Title = "Search Result";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- End Breadcrumbs -->
<section class="shop checkout section">
    <div class="container">
        <div class="row">
            @foreach (var product in Model.listProduct)
            {
                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                    <div class="single-product">
                        <div class="product-img">
                            <a href="@Url.Action("Details", "Products",  new { productID = product.productID })">
                                <img class="default-img" src="@Html.DisplayFor(modelItem => product.imagePath)" alt="#">
                                <img class="hover-img" src="@Html.DisplayFor(modelItem => product.imagePath)" alt="#">
                                @{
                                    if (product.quantity == 0)
                                    {
                                        <span class="out-of-stock">Out of Stock</span>
                                    }
                                }
                            </a>
                            <div class="button-head">
                                @*<div class="product-action">
                                <a title="Wishlist" href="#"><i class="fa fa-solid fa-heart"></i><span>Add to Wishlist</span></a>
                            </div>*@
                                <div class="product-action-2">
                                    @*<a title="Add to cart" href="@Url.Action("AddToCart", "Products",product.productID)" id="">Add to cart</a>*@
                                    <input type="button" name="AddToCart" class="btn" value="Add to cart" style="border: none; background: none;" itemid="@product.productID" id="btnAddCart" onclick="AddToCart(this)" />
                                </div>
                            </div>
                        </div>
                        <div class="product-content">
                            <h3><a href="product-details.html">@Html.DisplayFor(modelItem => product.name)</a></h3>
                            <div class="product-price">
                                <span>RM @Html.DisplayFor(modelItem => product.unitCost)</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Start Footer Area -->
