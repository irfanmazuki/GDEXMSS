@model GDEXMSS.Models.searchAnalysi
@{
    ViewBag.Title = "Product Analysis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Start Checkout -->

<section class="shop checkout section">
    <div class="container" id="PrintPDF">
        <div class="row">
            <div class="col-12">
                <div class="reply">
                    <div class="reply-head">
                        <h2 class="reply-title">Search product trends</h2>
                        <!-- Comment Form -->
                        @using (Html.BeginForm("Index", "Analysis", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Enter product name/type<span>*</span></label>
                                        @Html.EditorFor(model => model.searchKeyword, new { cols = 35, @rows = 3, htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.searchKeyword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group button">
                                        <button type="submit" class="btn">Search</button>
                                    </div>
                                </div>
                            </div>
                            <!-- End Comment Form -->
                        }
                    </div>
                    <h3>Result</h3>
                    <h4>@{
                        if(Model.searchResult != null)
                        {
                            @Html.Raw(Model.searchResult);
                            @Html.ActionLink("Add this product", "Add", "Products", new { productName = Model.searchKeyword}, new { @class = "badge bg-primary" });
                        }
                    }</h4>
                </div>
            </div>
        </div>
    </div>
</section>

