@model GDEXMSS.Models.mssSystem
@{
    ViewBag.Title = "Shipping Fees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Start Checkout -->
<section class="shop checkout section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="checkout-form">
                    <h2>Setting</h2>
                    <p></p>
                    @using (Html.BeginForm("Shipping", "Setting", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.mss_ID, new { htmlAttributes = new { @readonly = "readonly" } })
                        @Html.HiddenFor(model => model.mss_Name, new { htmlAttributes = new { @readonly = "readonly" } })
                        @Html.HiddenFor(model => model.mss_Category, new { htmlAttributes = new { @readonly = "readonly" } })
                        <div class="text-danger">
                            @Html.Raw(ViewBag.SuccessMessage)
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Shipping Fee (RM)</label>
                                    @Html.EditorFor(model => model.mss_Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.mss_Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" style="width:150px;" data-toggle="modal" data-target="#ConfirmCategory">
                            Confirm the changes?
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="ConfirmCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-body d-flex align-items-center">
                                        <h5>Confirm the Shipping Fee?</h5>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                        <button type="submit" class="btn btn-primary">Yes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!--/ End Form -->
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ End Checkout -->